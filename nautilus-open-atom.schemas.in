<gconfschemafile>
  <schemalist>
    <schema>
      <key>/schemas/apps/nautilus-open-atom/desktop_opens_home_dir</key>
      <applyto>/apps/nautilus-open-atom/desktop_opens_home_dir</applyto>
      <owner>nautilus-open-atom</owner>
      <type>bool</type>
      <default>false</default>
      <locale name="C">
         <short>Whether opening a atom on the desktop opens a terminal in the home directory</short>
         <long>
          If set to true, then opening a terminal on the desktop will open a terminal in
	  the home directory. Otherwise, it will be opened in the desktop directory.
	  Note that this key is irrelevant if the desktop directory is identical to the home directory.
         </long>
      </locale>
    </schema>
  </schemalist>
</gconfschemafile>
